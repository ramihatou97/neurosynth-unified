# NeuroSynth Unified - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL connection string (required)
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://neurosynth:neurosynth@localhost:5432/neurosynth

# Connection pool settings (optional)
DB_MIN_CONNECTIONS=2
DB_MAX_CONNECTIONS=10

# =============================================================================
# API Keys (required)
# =============================================================================

# Voyage AI for text embeddings
# Get your key at: https://dash.voyageai.com/
VOYAGE_API_KEY=your-voyage-api-key-here

# Anthropic for Claude RAG
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google AI for Gemini (optional - for VLM captioning during ingestion)
# Get your key at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here

# =============================================================================
# Model Configuration (optional)
# =============================================================================

# Voyage embedding model
VOYAGE_MODEL=voyage-3

# Claude model for RAG
CLAUDE_MODEL=claude-sonnet-4-20250514

# Gemini model for VLM captioning
GEMINI_MODEL=gemini-1.5-pro

# =============================================================================
# Storage Configuration (optional)
# =============================================================================

# Directory for FAISS indexes
FAISS_INDEX_DIR=./indexes

# Directory for extracted images
IMAGE_OUTPUT_DIR=./data/images

# Directory for temporary files
TEMP_DIR=./data/temp

# =============================================================================
# Application Settings (optional)
# =============================================================================

# Enable debug mode (true/false)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# API rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# Redis Configuration (optional - for caching)
# =============================================================================

# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Production Settings
# =============================================================================

# Secret key for session management (generate with: openssl rand -hex 32)
# SECRET_KEY=your-secret-key-here

# Allowed CORS origins (comma-separated)
# ⚠️ IMPORTANT: For production, NEVER use "*" (wildcard) with allow_credentials=True
# This is a security vulnerability that allows any domain to make authenticated requests.
#
# Development (allow localhost on multiple ports):
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000
#
# Production (specific domains only):
# CORS_ORIGINS=https://app.yourdomain.com,https://yourdomain.com
#
# If not set, defaults to "*" (wildcard - development only)

# SSL/TLS settings
# SSL_CERT_FILE=/path/to/cert.pem
# SSL_KEY_FILE=/path/to/key.pem
